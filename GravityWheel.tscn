code = "shader_type canvas_item;

uniform float angle;
uniform float timeAngle = 0;
uniform bool timeColorGreen = false;

void fragment()
{
	vec2 centeredUV = UV - vec2(0.5);
	float radiusSquared = centeredUV.x*centeredUV.x + centeredUV.y*centeredUV.y;
	if (radiusSquared > 0.07 || radiusSquared < 0.065)
	{
		COLOR = vec4(0);
	}
	
	float timeTheta = atan(centeredUV.x, centeredUV.y) + 3.14;
	if (timeTheta > 6.28 - timeAngle && radiusSquared < 0.065)
	{
		if (timeColorGreen)
		{
			// Green
			COLOR = vec4(0, 0.7, 0, 1);
		}
		else
		{
			// Red
			COLOR = vec4(1, 0, 0, 1);
		}
	}
	
}"

